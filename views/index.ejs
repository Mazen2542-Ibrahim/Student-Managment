<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <title>Students Management</title>

    <style>
        body {
            background-color: #e6e6e6;
        }
    </style>

</head>

<body>
    <div class="container  mt-5">
        <h2 class="card shadow p-2 mt-3 text-center">Student Management</h2>
    </div>
    <div class="container  mt-3">
        <div class="card shadow p-4">
            <div class="mx-auto mb-3">
                <a href="/create" class="btn btn-success">Add New Student</a>
            </div>
            <div class="overflow-scroll">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">First Name</th>
                            <th scope="col">Last Name</th>
                            <th scope="col">Age</th>
                            <th>Option</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if(students.length> 0){%>

                            <% students.forEach((student, index)=>{%>
                                <tr>
                                    <th scope="row">
                                        <%= ++index %>
                                    </th>
                                    <td>
                                        <%= student.firstname %>
                                    </td>
                                    <td>
                                        <%= student.lastname %>
                                    </td>
                                    <td>
                                        <%= student.age %>
                                    </td>
                                    <td>
                                        <div class="btn-group-sm d-flex gap-2">

                                            <a href="/edit/<%= student._id %>" class="btn btn-outline-info">Edit</a>
                                            <a href="/delete/<%= student._id %>?_method=delete"
                                                class="btn btn-outline-danger">Delete</a>
                                        </div>
                                    </td>
                                </tr>
                                <% }) %>
                                    <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</body>

</html>